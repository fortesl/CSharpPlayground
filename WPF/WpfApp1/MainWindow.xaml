<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Canvas Background="LightBlue">
        <StackPanel Orientation="Horizontal" Canvas.Top="100" Canvas.Right="200">
            <Button x:Name="Gb" Width="100" Height="50" Margin="10" Background="Red" Foreground="White" Click="Gb_Click" Content="Click me" />
            <Button x:Name="Gb2" Width="100" Height="50" Margin="10" Background="White" Foreground="Red" Click="Gb_Click" Content="Boo" />
        </StackPanel>
    </Canvas>
</Window>
