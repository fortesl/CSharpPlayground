<Window x:Class="WpfApp1.Panels.Grid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Panels"
        mc:Ignorable="d"
        Title="Grid" Height="450" Width="800">
    <Grid Background ="LightSteelBlue" Margin="0,0,0.333,-0.333">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="8.526" />
            <ColumnDefinition Width="24.807"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label x:Name="lblLeft" Background ="GreenYellow"
         Grid.Column="0" Content ="Left!" Margin="0,0,0.333,-0.333" Grid.ColumnSpan="2"/>

        <GridSplitter Grid.Column ="1" Width ="5" Margin="0,0,0.333,-0.333"/>

        <Label x:Name="lblRight" Content ="Right!" Margin="184.667,0,0.333,0" Grid.Column="2"/>
    </Grid>
</Window>
