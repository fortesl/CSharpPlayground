<Window x:Class="WpfObjectResourceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfObjectResourceApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel Orientation="Horizontal">
        <Button Margin="25" Height="200" Content="OK" FontSize="20" Background="{StaticResource MyBrush}" Style="{StaticResource BasicControlStyle}">
        </Button>
        <Button Margin="25" Height="200" Content="Cancel" FontSize="20" Background="{StaticResource MyBrush}" Style="{StaticResource BasicControlStyle}"/>
    </StackPanel>
</Window>
